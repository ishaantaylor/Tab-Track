{
  "manifest_version": 2,
  "name": "Tab Trak",
  "version": "0.0.1",
  
  "browser_action": {
    "default_icon": {
      "19": "images/faviconpb.png"            
    },
    "default_title": "Click me",
    "default_popup": "browser_action.html"
  },
  
  "background": {
    "scripts": 
      ["jquery-1.10.2.js",
      "taffy-min.js",
      "bg.js"]
  },
  
  "commands": {
    "show-tree": {
      "suggested_key": { "default": "Ctrl+Shift+S" },
      "description": "Show session tree"
    },
    "clear-database": {
      "suggested_key": { "default": "Ctrl+Shift+Q"},
      "description": "Starts new tree session"
    }

  },
  
  "incognito": "split",
  "permissions": [
    "tabs",
    "storage"
  ]
}